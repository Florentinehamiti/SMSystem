
<div class="container-fluid px-4 py-4">
    <form class="px-3">
        <div class="row">
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <label class="form-label">Title</label>
                    <input type="text" class="form-control">
                </div>
            </div>
           
        </div>
        <h6 class="mt-2">Book details</h6>
        <div class="row">
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <label class="form-label">Book</label>
                    <input type="text" class="form-control">
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <label class="form-label">Author</label>
                    <input type="text" class="form-control">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    @* <label class="form-label">Publication date</label> *@
                    <input placeholder="Publication date" type="date" class="form-control">
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                     <label class="form-label">Edition</label> 
                    <input type="text" class="form-control">
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-end gap-2">
            <a asp-action="Subjects" asp-controller="Home" asp-area="Admin" type="button" class="btn btn-outline-secondary">Back</a>
            <a asp-action="AddSubject" asp-controller="Home" asp-area="Admin" type="submit" class="btn btn-outline-primary">Save</a>
        </div> 

    </form>
</div>
